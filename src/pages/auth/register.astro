---
import Layout from "@/layouts/Layout.astro";
import { AuthLayout } from "@/components/auth/AuthLayout";
import { RegisterForm } from "@/components/auth/RegisterForm";
import { createSupabaseServerInstance } from "@/db/supabase.client";

export const prerender = false;

// Sprawdź czy użytkownik jest już zalogowany
const supabase = createSupabaseServerInstance({
  cookies: Astro.cookies,
  headers: new Headers(Astro.request.headers),
});
const {
  data: { user },
} = await supabase.auth.getUser();

// Jeśli użytkownik jest zalogowany, przekieruj go na stronę główną
if (user) {
  return Astro.redirect("/");
}
---

<Layout title="Rejestracja - 10xCards">
  <AuthLayout client:load title="Stwórz konto" description="Dołącz do społeczności i twórz własne zestawy fiszek">
    <RegisterForm client:load />
  </AuthLayout>
</Layout>
